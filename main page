        <input type="text" id="goal" class="goal-input" placeholder="Enter your main goal for today...">
        <button class="save-btn" onclick="saveGoal()">Save Goal</button>
        <p id="goalDisplay" style="margin-top:8px; color:#5682B1; font-weight:bold;"></p>
      </div>

      <!-- To-Do List -->
      <div class="section">
        <h3>üìù To-Do List</h3>
